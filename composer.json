{
  "name": "cristhianss/deployer-magento2",
  "description": "Magento 2 deployment tool based on deployer.org",
  "keywords": ["magento2", "magento", "deployment", "deployer", "deploy", "tool"],
  "license": [
    "MIT"
  ],
  "authors": [
    {
      "name": "Cristhian Silveira Silva",
      "email": "cristhianss@gmail.com"
    }
  ],
  "require": {
    "deployer/deployer": "7.5.4"
  },
  "require-dev": {
    "phpmd/phpmd": "^2.6",
    "nikic/php-parser": "^4.14",
    "squizlabs/php_codesniffer": "^3.2",
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpro/grumphp-shim": "^1.5"
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp-shim": true
    }
  }
}
